<button {{on "click" this.snap}} type="button">
    {{if this.snapped 'unsnap' 'snap'}}
</button>
<div class="main-code-box">
    <AnimatedContainer>
        {{#animated-each this.shownGists use=this.transition as |gist|}}
        <div class="file-block">
            <div class="file-header">
                <h2>{{gist.description}}</h2>
                <small>{{gist.filename}}</small>
            </div>
            <div class="code-box">
                <CodeBlock @language="javascript">
                    {{gist.body}}
                </CodeBlock>
            </div>
        </div>
        {{/animated-each}}
    </AnimatedContainer>
</div>